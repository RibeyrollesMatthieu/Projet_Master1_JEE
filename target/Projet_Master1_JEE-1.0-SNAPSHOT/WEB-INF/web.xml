<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
    <servlet-name>servlets.RegisterServlet</servlet-name>
    <servlet-class>server.servlets.RegisterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>



  <servlet>
    <servlet-name>servlets.HomeServlet</servlet-name>
    <servlet-class>server.servlets.HomeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.ProfileServlet</servlet-name>
    <servlet-class>server.servlets.ProfileServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.LoginServlet</servlet-name>
    <servlet-class>server.servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.LogoutServlet</servlet-name>
    <servlet-class>server.servlets.LogoutServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.FriendsServlet</servlet-name>
    <servlet-class>server.servlets.FriendsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.FriendsServlet</servlet-name>
    <url-pattern>/friends</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.RelationServlet</servlet-name>
    <servlet-class>server.servlets.RelationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.RelationServlet</servlet-name>
    <url-pattern>/relation-update</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>servlets.CovidedServlet</servlet-name>
    <servlet-class>server.servlets.CovidedServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.CovidedServlet</servlet-name>
    <url-pattern>/covided</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>servlets.NotificationsServlet</servlet-name>
    <servlet-class>server.servlets.NotificationsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>servlets.NotificationsServlet</servlet-name>
    <url-pattern>/notifications</url-pattern>
  </servlet-mapping>



  <error-page>
    <error-code>404</error-code>
    <location>/resources/views/pages/error.jsp</location>
  </error-page>
</web-app>